<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/fondoTextoLogin">

        <ImageView
            android:id="@+id/imagenTituloLista"
            android:layout_width="120dp"
            android:layout_height="170dp"
            android:scaleType="centerCrop"
            android:src="@drawable/miercoles" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="25dp">

            <TextView
                android:id="@+id/nombreTituloLista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/baloo_thambi_2"
                android:text="Miércoles"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tipoTituloLista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo: Serie"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/baloo_thambi_2"
                android:textColor="@color/white"
                android:textSize="14sp" />

                <TextView
                    android:id="@+id/yearTituloLista"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Año: 2023"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/baloo_thambi_2"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/imagenQuitarLista"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="210dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/quitar" />

        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>