<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/fondoTextoLogin">

        <ImageView
            android:id="@+id/imagenTitulo"
            android:layout_width="150dp"
            android:layout_height="205dp"
            android:scaleType="centerCrop"
            android:src="@drawable/miercoles" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="25dp">

            <TextView
                android:id="@+id/nombreTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/baloo_thambi_2"
                android:text="Miércoles"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/yearTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Año: 2023"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/baloo_thambi_2"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tipoTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo: Serie"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/baloo_thambi_2"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imagenAdd"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/agregar" />
        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>