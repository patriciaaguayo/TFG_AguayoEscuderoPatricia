<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingBottom="70dp"
    android:layout_height="wrap_content"
    android:background="@color/fondoTextoLogin">

    <!-- Campo para el nombre de la foto -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="40dp">

        <TextView
            android:layout_width="142dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Nombre:"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/InsertarNombreFoto"
            android:layout_width="184dp"
            android:layout_height="50dp"
            android:background="@drawable/crud_radius"
            android:contentDescription="content" />
    </LinearLayout>

    <!-- Imagen seleccionada -->
    <ImageView
        android:id="@+id/previewImagen"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="30dp"
        android:scaleType="centerCrop"
        android:background="@drawable/crud_radius" />

    <!-- Botón para abrir galería -->
    <Button
        android:id="@+id/botonSeleccionarImagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccionar imagen"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/botonLogin" />

    <!-- Botón para insertar -->
    <Button
        android:id="@+id/InsertarButtonFotos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insertar"
        android:backgroundTint="@color/botonLogin" />

</LinearLayout>
